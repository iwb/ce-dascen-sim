{
  "experiment_id": "exp03_linear_flow_storage",
  "description": "Linear production flow with specialized stations and storage buffer",
  "output_prefix": "linear_storage",
  
  "simulation": {
    "weeks": 2,
    "start_date": "2025-01-01T00:00:00"
  },
  
  "factory_structure": {
    "file": "line_parallel_4.json",
    "distance_matrix": "distance_matrix_line_parallel_4.csv"
  },
  
  "products": [
    {"file": "variants/variant1.json", "enabled": true},
    {"file": "variants/variant2.json", "enabled": true},
    {"file": "variants/variant3.json", "enabled": true}
  ],
  
  "product_delivery": {
    "mode": "random"
  },
  
  "overrides": {
    "visualization": {
      "show_timeseries_graphs": true
    },
    "material_flow": {
      "flow_mode": "pull"
    },
    "output": {
      "core_outputs": {
        "export_eventlog": true,
        "export_case_table": true,
        "export_output_table": true
      },
      "derived_outputs": {
        "export_station_stats_absolute": true
      },
      "debug_outputs": {
        "export_monitoring_data": true
      }
    }
  }
}